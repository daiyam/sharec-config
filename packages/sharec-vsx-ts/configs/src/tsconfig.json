{
	"compilerOptions": {
		"rootDir": ".",
		"module": "commonjs",
		"target": "es6",
		"outDir": "../out",
		"lib": [
			"es6",
			"es2017"
		],
		"sourceMap": false,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strict": true,
		"alwaysStrict": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"references": [
		{
			"path": ".."
		}
	]
}
